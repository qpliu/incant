    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/note</item>
  </style>

  <style name="glk_grid_blockquote">
    <item name="android:typeface">monospace</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">@color/blockquote</item>
  </style>

  <style name="glk_grid_input">
    <item name="android:typeface">monospace</item>
