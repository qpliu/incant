<?xml version="1.0" encoding="utf-8"?>
<resources>
  <color name="input_text">#68f</color>
  <color name="text">#000</color>
  <color name="background">#ddd</color>
  <color name="note">#444</color>
  <color name="blockquote">#246</color>
  <color name="alert">#f00</color>

  <style name="incant_theme" parent="android:Theme.Holo.Light">
    <item name="android:windowBackground">@color/background</item>
  </style>

  <style name="input_text">
    <item name="android:textColor">@color/input_text</item>
    <item name="android:typeface">monospace</item>
  </style>

  <style name="story_name_style" parent="@android:style/TextAppearance">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="story_title" parent="@style/story_name_style">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="story_author" parent="@style/story_name_style">
    <item name="android:textColor">#444</item>
  </style>

  <style name="story_headline" parent="@style/story_name_style">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="story_description_style" parent="@android:style/TextAppearance">
    <item name="android:textSize">12sp</item>
  </style>

  <style name="story_description" parent="@style/story_description_style">
    <item name="android:textColor">#666</item>
  </style>

  <style name="story_save_time" parent="@style/story_description_style">
    <item name="android:textColor">#696</item>
  </style>

  <style name="story_download_time" parent="@style/story_description_style">
    <item name="android:textColor">#aaa</item>
  </style>

  <style name="story_details_name_style" parent="@android:style/TextAppearance">
    <item name="android:textSize">18sp</item>
  </style>

  <style name="story_details_title" parent="@style/story_details_name_style">
    <item name="android:textStyle">bold</item>
  </style>

  <style name="story_details_author" parent="@style/story_details_name_style">
    <item name="android:textColor">#444</item>
  </style>

  <style name="story_details_headline" parent="@style/story_details_name_style">
    <item name="android:textStyle">italic</item>
  </style>

  <style name="glk_normal">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="glk_emphasized">
    <item name="android:textStyle">italic</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="glk_preformatted">
    <item name="android:typeface">monospace</item>
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="glk_header">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">20sp</item>
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="glk_subheader">
    <item name="android:textStyle">bold</item>
    <item name="android:textSize">16sp</item>
    <item name="android:textColor">@color/text</item>
  </style>

  <style name="glk_alert">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/alert</item>
  </style>

  <style name="glk_note">
    <item name="android:textSize">12sp</item>
    <item name="android:textColor">@color/note</item>
  </style>

  <style name="glk_blockquote">
    <item name="android:textSize">12sp</item>
    <item name="android:textStyle">italic</item>
    <item name="android:textColor">@color/blockquote</item>
  </style>

  <style name="glk_input">
    <item name="android:textSize">14sp</item>
    <item name="android:textColor">@color/input_text</item>
  </style>

  <style name="glk_grid_normal">
    <item name="android:typeface">monospace</item>
